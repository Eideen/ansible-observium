# {{ ansible_managed }}
<VirtualHost *:80>
  Redirect / https://{{ ansible_default_ipv4.address }}/
#    ServerAdmin {{smokeping_owner_email}}
    DocumentRoot {{apache_doc_root}}
    <FilesMatch \.php$>
      SetHandler application/x-httpd-php
    </FilesMatch>
    <Directory />
            Options FollowSymLinks
            AllowOverride None
    </Directory>
    <Directory {{apache_doc_root}}>
            DirectoryIndex index.php
            Options Indexes FollowSymLinks MultiViews
            AllowOverride All
            Require all granted
    </Directory>
    ErrorLog  ${APACHE_LOG_DIR}/error.log
    LogLevel warn
    CustomLog  ${APACHE_LOG_DIR}/access.log combined
    ServerSignature On
</VirtualHost>
